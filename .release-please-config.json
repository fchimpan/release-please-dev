{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "packages": {
    "backend": {
      "path": "backend",
      "package-name": "backend",
      "release-type": "go"
    },
    "frontend": {
      "path": "frontend",
      "package-name": "frontend",
      "release-type": "simple"
    },
    "mobile": {
      "path": "mobile",
      "package-name": "mobile",
      "release-type": "simple"
    }
  }
}
